<?xml version="1.0" encoding="utf-8" ?>
<switch:CustomSwitch xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:switch="clr-namespace:Switch;assembly=Switch"
                    x:Class="MRC_App.Controls.CSwitch"
    BackgroundColor="Red"
                     CornerRadius="20"
                     HeightRequest="40"
                     KnobColor="Green"
                     KnobCornerRadius="18"
                     KnobHeight="36"
                     KnobLimit="Boundary"
                     KnobWidth="36"
                     VibrateDuration="20"
                     WidthRequest="80" >
    <switch:CustomSwitch.KnobContent>
        <StackLayout Orientation="Horizontal">
            <FlexLayout x:Name="Flex"
                        Margin="10,0"
                        AlignItems="Center"
                        JustifyContent="SpaceBetween"
                        WidthRequest="60">
                
            </FlexLayout>
        </StackLayout>
    </switch:CustomSwitch.KnobContent>
</switch:CustomSwitch>