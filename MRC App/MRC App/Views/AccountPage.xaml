<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="MRC_App.Views.AccountPage">
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Text="Account Information" TextColor="Black" FontSize="Medium" 
                   FontAttributes="Bold" HorizontalTextAlignment="Start" 
                   VerticalTextAlignment="Start"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition  Height="20"/>
                    <RowDefinition  Height="20"/>
                    <RowDefinition  Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--Col 1 labels -->
                <Label Text="First Name: "   FontSize="Medium" 
                    Grid.Row="0" Grid.Column="0"
                    HorizontalOptions="Start"
                    
                    VerticalOptions="StartAndExpand"/>
                <Label Text="Last Name: "   FontSize="Medium"
                    Grid.Row="1" Grid.Column="0"
                    HorizontalOptions="Start"
                    
                    VerticalOptions="StartAndExpand"/>
                <Label Text="Email: "   FontSize="Medium"
                   Grid.Row="2" Grid.Column="0"    
                   HorizontalOptions="Start"
                   
                   VerticalOptions="StartAndExpand"/>
                <Label Text="Birthday: "   FontSize="Medium"
                   Grid.Row="3" Grid.Column="0"
                   HorizontalOptions="Start"
                   
                   VerticalOptions="StartAndExpand"/>
                <!-- Col 2  -->
                <Label x:Name="firstNameLabel" FontSize="Medium"
                   Grid.Column="1" Grid.Row="0"
                   Text="Bob" 
                   HorizontalOptions="Start"
                   VerticalOptions="Start"/>

                <Label x:Name="lastNameLabel" FontSize="Medium"
               Grid.Column="1" Grid.Row="1"
               Text="The builder" 
               HorizontalOptions="Start"
               VerticalOptions="Start"/>

                <Label x:Name="emailLabel" FontSize="Medium"
               Grid.Column="1" Grid.Row="2"
               Text="BobTheBuilder@test.com" 
               HorizontalOptions="Start"
               VerticalOptions="Start"/>

                <Label x:Name="birthdayLabel" FontSize="Medium"
               Grid.Column="1" Grid.Row="3"
               Text="20/03/1998" 
               HorizontalOptions="Start"
               VerticalOptions="Start"/>
                
                <!-- Col 3 -->
                <Label x:Name="Pointer1" FontSize="Medium" FontAttributes="Bold"
               Grid.Column="2" Grid.Row="0"
               Text=">" 
               HorizontalOptions="Center"
               VerticalOptions="Start"/>

                <Label x:Name="Pointer2" FontSize="Medium" FontAttributes="Bold"
               Grid.Column="2" Grid.Row="1"
               Text=">" 
               HorizontalOptions="Center"
               VerticalOptions="Start"/>

                <Label x:Name="Pointer3" FontSize="Medium" FontAttributes="Bold"
               Grid.Column="2" Grid.Row="2"
               Text=">" 
               HorizontalOptions="Center"
               VerticalOptions="Start"/>

                <Label x:Name="Pointer4" FontSize="Medium" FontAttributes="Bold"
               Grid.Column="2" Grid.Row="3"
               Text=">" 
               HorizontalOptions="Center"
               VerticalOptions="Start"/>
            </Grid>


        </Grid>



    </ContentPage.Content>
</ContentPage>